{
  "type": "Group",
  "name": "Group main",
  "style": {
    "margin": "60px"
  },
  "contents": [
    {
      "type": "HtmlText",
      "name": "Widget",
      "text": "<h2>HTML Text 1</h2>",
      "style": {
        "margin": "60px",
        "background": {
          "color": "red"
        }
      }
    },
    {
      "type": "HtmlText",
      "name": "Widget",
      "text": "<h2>HTML Text 2</h2>",
      "style": {
        "margin": "60px",
        "background": {
          "color": "#00ff00"
        }
      },
      "event": {
        "mouseover": "var color = 'rgb(255, 0, 0)';\r\n$widget.animate({\r\n\t'style.background.color': color,\r\n\tduration: 3000\r\n});",
        "mouseout": "var color = 'rgb(0, 255, 0)';\r\n$widget.animate({\r\n\t'style.background.color': color,\r\n\tduration: 3000\r\n});"
      }
    },
    {
      "type": "Group",
      "name": "Row with animateion",
      "style": {
        "layout": {
          "direction": "row"
        },
        "padding": "60px"
      },
      "contents": [
        {
          "type": "HtmlText",
          "name": "Widget",
          "text": "<h2>HTML Text 1</h2>",
          "style": {
            "margin": "10px",
            "background": {
              "color": "red"
            },
            "size": {
              "width": "200px",
              "min-width": "200px",
              "height": "200px"
            }
          },
          "event": {
            "mouseover": "$widget.animate({\r\n\t'style.size.width': '+=50px',\r\n\t'style.background.color': '#00ff00',\r\n\tduration: 3000\r\n});",
            "mouseout": "$widget.animate({\r\n\t'style.size.width': '-=50px',\r\n\t'style.background.color': '#ff0000',\r\n\tduration: 3000\r\n});"
          }
        },
        {
          "type": "HtmlText",
          "name": "Widget",
          "text": "<h2>HTML Text 1</h2>",
          "style": {
            "margin": "10px",
            "background": {
              "color": "red"
            },
            "size": {
              "width": "200px",
              "min-width": "200px",
              "height": "200px"
            }
          },
          "event": {
            "mouseover": "$widget.animate({\r\n\t'style.size.width': '+=100px',\r\n\t'style.background.color': '#00ff00',\r\n\tduration: 3000\r\n});",
            "mouseout": "$widget.animate({\r\n\t'style.size.width': '-=100px',\r\n\t'style.background.color': '#ff0000',\r\n\tduration: 3000\r\n});"
          }
        }
      ]
    }
  ]
}